{
  "manifest_version": 3,
  "name": "Enhanced Mouli",
  "version": "1.0.9",
  "description": "Enhances your visual experience in the epitech moulinette.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://my.epitech.eu/*",
    "https://api.epitest.eu/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://myresults.epitest.eu/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "enhanced-mouli@epitechaddons.com"
    }
  },
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Enhanced Epitech Percentages",
    "default_popup": "popup.html"
  }
}
